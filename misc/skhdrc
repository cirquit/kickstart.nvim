# window focus
ralt - down  : yabai -m window --focus south
ralt - up    : yabai -m window --focus north
ralt - left  : yabai -m window --focus west
ralt - right : yabai -m window --focus east

# window movement
shift + ralt - down  : yabai -m window --swap south
shift + ralt - up    : yabai -m window --swap north 
shift + ralt - left  : yabai -m window --swap west
shift + ralt - right : yabai -m window --swap east

shift + ralt - 1 : yabai -m window --space 1
shift + ralt - 2 : yabai -m window --space 2
shift + ralt - 3 : yabai -m window --space 3
shift + ralt - 4 : yabai -m window --space 4
shift + ralt - 5 : yabai -m window --space 5
shift + ralt - 6 : yabai -m window --space 6
shift + ralt - 7 : yabai -m window --space 7
shift + ralt - 8 : yabai -m window --space 8
shift + ralt - 9 : yabai -m window --space 9
shift + ralt - 0 : yabai -m window --space 10


# window movement special
shift + ralt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
shift + ralt - m : yabai -m window --toggle zoom-fullscreen

# automatic space alignment
shift + ralt - end : yabai -m space --rotate 270
shift + ralt - b   : yabai -m space --balance

# custom applications
cmd - return : open -na /Applications/iTerm.app/Contents/MacOS/iTerm2
